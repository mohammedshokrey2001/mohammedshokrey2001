def main():
    n, m = [int(x) for x in input().split()]
    count_cool = 0
    count_normal = 0
    while n != 0 and m != 0:
        count_cool += 1
        n -= 1
        m -= 1

    if n >= 2:
        count_normal += int(n / 2)

    if m >= 2:
        count_normal += int(m / 2)

    print(count_cool, count_normal)


if __name__ == '__main__':
    main()
