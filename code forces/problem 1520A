def main():
    n = int(input())
    for i in range(0,n):
        s = input()
        st = input()
        comp = []
        comp.append(st[0])
        for x in range(1, len(st)):
            if st[x]!=st[x-1]:
                if st[x] not in comp:
                 comp.append(st[x])
                else:
                    print("NO")
                    s="noon"
                    break
        if s!="noon":
                print("YES")




if __name__ == '__main__':
    main()
